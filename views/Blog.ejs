<!DOCTYPE html>
<html lang="en">
<head>
    <title>Blog</title>
    <%- include('./partials/head') %>
</head>
<body>
   <%- include('./partials/navbar') %>
     <div class="container mt-4">
        <h1><%- blog.title %></h1>
        <img src="<%- blog.coverImageURL %>" width="800px">
        <pre class="mt-3 "><%- blog.body %></pre>
     </div>
     <div class="container mt-4">
        <img src="<%- blog.createdBy.profileImgURL %>" width="100px"><%- blog.createdBy.fullname %>
     </div>

     <div class="container mt-3">
      <h1>Comments</h1>
      <% if (locals.user) { %>
         <form action="/Blog/comment/<%- blog._id %>" method="post">
            <div class="mb-3">
              <input type="text" name="content" class="form-control" placeholder="Enter Your Comments">
            </div> <!-- Missing div closing tag -->
            <button type="submit" class="btn btn-primary">Submit</button>
         </form>
      <% } %> <!-- Removed the extra parenthesis here -->
      <div class="mt-3">
         <% comments.forEach(comment => { %> <!-- 'Comments' should be 'comments' if that's what you're passing in -->
          <div>
            <img src="<%- comment.createdBy.profileImgURL %>" width="100px"><%- comment.createdBy.fullname %>
            <pre><%- comment.content %></pre>
          </div>
         <% }); %> <!-- Closed the forEach loop properly -->
      </div>
     </div>
   <%- include('./partials/script') %>
</body>
</html>
