<!DOCTYPE html>
<html lang="en">
<head>
    <title>Signin</title>
    <%- include('./partials/head') %>
    <style>
        body {
            background-color: #121212; /* Dark background */
            color: #e0e0e0; /* Light text color */
            font-family: 'Arial', sans-serif; /* Improved font */
        }

        .container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
        }

        .form-control {
            background-color: #1e1e1e; /* Dark input background */
            color: #e0e0e0; /* Light text color */
            border: 1px solid #333; /* Dark border */
            border-radius: 4px; /* Rounded corners */
            padding: 10px;
        }

        .form-control:focus {
            border-color: #555; /* Focused border color */
            box-shadow: none; /* Remove default box-shadow */
        }

        .form-label {
            font-weight: bold; /* Make labels stand out */
        }

        .form-text {
            color: #b0b0b0; /* Slightly lighter text color */
        }

        .btn-primary {
            background-color: #007bff; /* Bootstrap primary button color */
            border-color: #007bff;
            border-radius: 4px; /* Rounded corners */
            padding: 10px 20px; /* Padding around text */
            font-size: 16px; /* Larger font size */
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker shade on hover */
            border-color: #004085;
        }

        .btn-primary:focus {
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.5); /* Focus shadow */
        }

        .alert {
            background-color: #f44336; /* Red background for error messages */
            color: white; /* White text color */
            border: none;
            border-radius: 4px;
            padding: 10px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
   <%- include('./partials/navbar') %>
   <div class="container mt-4">
    <form action="/user/signin" method="post">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="exampleInputPassword1">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
   </div>
   <%- include('./partials/script') %>
</body>
</html>
